Include config.d/*

Host *
    ServerAliveInterval 25

    # Check SSHFP DNS record
    VerifyHostKeyDNS yes

    # Fix terminfo for kitty:
    SetEnv TERM=xterm-256color

    # Remove bad ciphers from default list
    MACs hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com,umac-128-etm@openssh.com

    # Remove CBC mode
    Ciphers chacha20-poly1305@openssh.com,aes128-gcm@openssh.com,aes256-gcm@openssh.com

    # TPM
    PKCS11Provider /usr/lib/x86_64-linux-gnu/libtpm2_pkcs11.so.1

    # SSH Multiplexing
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

Host forside
    Hostname xn--sb-lka.org
    Port 2222
    User root

Host hetzner
    Hostname 95.216.212.222
    User root

Host matrix
    Hostname matrix.xn--sb-lka.org
    Port 2222
    User root

Host pyjamas
    Hostname pyjam.as
    User nicolai

Host files
    Hostname files.xn--sb-lka.org
    Port 2022

Host hackerlab
    Hostname 192.168.234.145
    User hackerlab
